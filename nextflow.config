// nextflow.config

// NEXTFLOW PROFILES
profiles {

	// -profile standard
	standard {
		includeConfig "${baseDir}/config/base.config"
	}

	// -profile conda
	conda {
		includeConfig "${baseDir}/config/base.config"
		process.conda = "$baseDir/env_GEM.yaml"
	}

	// -profile docker
	docker {
		includeConfig "${baseDir}/config/base.config"
		docker.enabled = true
		process.container = 'epidiverse/ewas'
	}

	// -profile singularity
	singularity {
		includeConfig "${baseDir}/config/base.config"
		singularity.enabled = true
		process.container = 'epidiverse/ewas'
	}


	// -profile test
	test {
		includeConfig "${baseDir}/config/base.config"
		includeConfig "${baseDir}/config/test.config"
	}

	// -profile epi
	epi {
		includeConfig "${baseDir}/config/base.config"
		process.conda='/scr/epi/pipelines/ewas/libs/gem'
		process.executor='slurm'
		process.queue='crunch'
		includeConfig "${baseDir}/config/epidiverse.config"
	}

	// -profile diverse
	diverse {
		includeConfig "${baseDir}/config/base.config"
		process.conda='/scr/epi/pipelines/ewas/libs/gem'
		process.executor='slurm'
		process.queue='test'
		includeConfig "${baseDir}/config/epidiverse.config"
	}

	// -profile custom
	custom {
		// Don't load any config (for use with custom home configs)
	}
}


// NEXTFLOW MANIFEST
manifest {
	homePage = "https://bitbucket.org/epidiverse/ewas"
	description = "A pipeline for epigenome wide association studies with GEM R package"
	mainScript = "main.nf"
	version = "0.1.0"
	nextflowVersion = "19.09+"
}


params.output = "ewas"

// NEXTFLOW REPORTING
dag {
	enabled = true
	file = "${params.output}/dag.svg"
}
report {
	enabled = true
	file = "${params.output}/report.html"
}
timeline {
	enabled = true
	file = "${params.output}/timeline.html"
}
trace {
	enabled = true
	file = "${params.output}/trace.txt"
}