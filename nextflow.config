// PRIMARY NEXTFLOW.CONFIG
// This file contains all default parameters, profiles, pipeline metadata

// DEFAULT PARAMETERS
params {

	// BASIC PARAMS
	help = false
	version = false
	debug = false
	take = "10"
	fork = "10"

	// INPUT / OUTPUT
	input = false
	samples = false
	output = "ewas"

	// MODIFIERS
	DMP             = false
	DMR             = false
	GEM_Emodel      = false
	GEM_Gmodel      = false
	GEM_GXEmodel    = false  
	intersection    = false
	SNP             = false
	my_SNP          = false

	// METHYLATION CONTEXT
	noCpG = false
	noCHG = false
	noCHH = false

	// FILTERING
	coverage        = "0"
	Emodel_pv       = "1"
	Gmodel_pv       = "1e-04"
	GXEmodel_pv     = "1e-04"
	sig             = "0.05"
	FDR             = "0.05"
	max_missing     = "0.5"
	mac             = "3"
	minQ            = "30"

}


// NEXTFLOW PROFILES
profiles {

	// -profile standard
	standard {
		includeConfig "${baseDir}/config/base.config"
	}

	// -profile conda
	conda {
		includeConfig "${baseDir}/config/base.config"
		process.conda = "$baseDir/env/environment.yml"
	}

	// -profile docker
	docker {
		includeConfig "${baseDir}/config/base.config"
		docker.enabled = true
		process.container = 'epidiverse/template'
	}

	// -profile singularity
	singularity {
		includeConfig "${baseDir}/config/base.config"
		singularity.enabled = true
		process.container = 'epidiverse/template'
	}

	// -profile test
	test {
		includeConfig "${baseDir}/config/base.config"
		includeConfig "${baseDir}/config/test.config"
	}

	// -profile epi
	epi {
		includeConfig "${baseDir}/config/base.config"
		process.conda='/scr/epi/pipelines/template/libs/template'
		process.executor='slurm'
		process.queue='crunch'
		includeConfig "${baseDir}/config/epidiverse.config"
	}

	// -profile diverse
	diverse {
		includeConfig "${baseDir}/config/base.config"
		process.conda='/scr/epi/pipelines/template/libs/template'
		process.executor='slurm'
		process.queue='test'
		includeConfig "${baseDir}/config/epidiverse.config"
	}

	// -profile custom
	custom {
		// Don't load any config (for use with custom home configs)
	}
}


// NEXTFLOW MANIFEST
manifest {
	homePage = "https://github.com/epidiverse/template"
	author = "Firstname Surname"
	description = "A template for building bioinformatics pipelines in Nextflow"
	mainScript = "main.nf"
	version = "0.1.0dev"
	nextflowVersion = "19.09+"
}


// NEXTFLOW REPORTING # this defines pipeline metadata
dag {
	enabled = true
	file = "${params.output}/dag.svg"
}
report {
	enabled = true
	file = "${params.output}/report.html"
}
timeline {
	enabled = true
	file = "${params.output}/timeline.html"
}
trace {
	enabled = true
	file = "${params.output}/trace.txt"
}
